<div class="orders-container">
  <div class="form-centralize-review">
    <div class="heading-rounded-sm">
      <h2 style="text-align: center;"> My Order</h2>
    </div>
    <div class="form-borders-cart">

      <% if @myproducts %>

        <table class="styled-table">
          <thead >
            <tr class="table-title">
              <th scope="col col-pro layout-inline" >Product</th>
              <th scope="qty qty-plus">Quantity</th>
              <th scope="col col-price col-numeric">Unit Price</th>
              <th scope="col col-price col-numeric">Width</th>
              <th scope="col col-price col-numeric">Height</th>
              <th scope="col col-price col-numeric">Depth</th>
              <th scope="col col-price col-numeric">Stock</th>
              <th scope="col col-vat col-numeric">Partial</th>
            </tr>

          </thead>
            <tbody>
              <% sum = 0  %>
              <% @myproducts.each do |product| %>
                <tr>
                  <th scope='row'><%= Product.find(product.product_id).name %></th>
                  <td> <%=  product.quantity  %></td>
                  <td>$ <%=  product.unit_price %></td>
                  <td>w: <%=  product.product.width %></td>
                  <td>h: <%=  product.product.height %></td>
                  <td>d: <%=  product.product.depth %></td>
                  <td><%=  product.product.stock %></td>
                  <td> <% sum += (product.quantity) * (product.unit_price) %> $ <%=  (product.quantity) * (product.unit_price) %> <%= link_to orders_to_product_path(product),
                  method: 'DELETE' , remote:true do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <hr>
        <p><strong>Total Price : $ <%= sum %></strong></p>
      <div class="btn-box">
        <%= link_to 'Close', root_path, class: "order-btn"%>
      </div>
    <% end %>
    </div>
  </div>
</div>
